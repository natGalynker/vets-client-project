<div class="pet-headers flex-grid-fifths">
  <h2 class="col-hbs heading">Pet Name</h2>
  <h2 class="col-hbs heading">Owner Name</h2>
  <h2 class="col-hbs heading">Date of Birth</h2>
  <h2 class="col-hbs heading">Gender</h2>
  <h2 class="col-hbs heading">Breed</h2>
</div>
{{#each pets}}
  <div class="pet-values flex-grid-fifths">
    <h3 class="col-hbs">{{this.name}}</h3>
    <h3 class="col-hbs">{{this.owner_name}}</h3>
    <h3 class="col-hbs">{{this.born_on}}</h3>
    <h3 class="col-hbs">{{this.gender}}</h3>
    <h3 class="col-hbs">{{this.breed}}</h3>
  </div>
  <div class="button-group flex-grid-fifths">
    <form class="update-vaccine-form patch-button col-hbs" data-id="{{id}}">
      <input name="submit" type="submit" class="update-vaccinne-btn" value="Got a shot!">
    </form>
    <form class="update-feral-form patch-button col-hbs" data-id="{{id}}">
      <input name="pet[feral]" type="submit" class="update-feral-btn" value="Not Feral!">
    </form>
    <form class="update-neutered-form patch-button col-hbs" data-id="{{id}}">
      <input name="pet[neutered]" type="submit" class="update-neutered-btn" value="Neutered!!">
    </form>
    <!-- <form class="update-declawed-form patch-button col-hbs" data-id="{{id}}">
    <input name="pet[declawed]" type="submit" class="update-declawed-btn" value="Declawed!!!">
  </form> -->
    <form class="delete-pet-form patch-button col-hbs" data-id="{{id}}">
      {{!-- <i type="submit" class="delete-pet-btn fa fa-trash-o fa-lg" aria-hidden="true"></i> --}}
      <input name="submit" type="submit" class="delete-pet-btn" value="Remove Pet">
    </form>
    <i name="pet[declawed}" type="button" class="fa fa-bolt fa-lg test-icon" aria-hidden="true" data-id="{{id}}"></i>
  </div>


  <li id="view" data-toggle="modal" data-target=".bs-example-modal-lg" class="nav-button view" data-id="{{this.id}}">View Pet</li>
<!-- <a href="#" data-id="{{id}}">view-pet</a></li>-->
  <div class="main-container">
    <div class="form-container">
      <div class="modal fade bs-example-modal-lg {{this.id}}" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="viewPetLabel">View Pet Info</h4>
            </div>
            <div class="modal-body">
              <form id="view-pet" action="#">
                <div class="pet-values flex-grid-sevenths">
                  <h5 class="col-modal">
                      Pet Name
                      <span></span>
                      <br>
                      {{this.name}}</h5>
                  <h5 class="col-modal">
                      Owner Name
                      <span></span>
                      <br>
                      {{this.owner_name}}</h5>
                  <h5 class="col-modal">
                      Date of Birth
                      <span></span>
                      <br>
                      {{this.born_on}}</h5>
                  <h5 class="col-modal">
                      Pet Gender
                      <span></span>
                      <br>
                      {{this.gender}}</h5>
                  <h5 class="col-modal">
                      Pet Breed
                      <span></span>
                      <br>
                      {{this.breed}}</h5>
                </div>
                <hr>
                <div class="pet-values flex-grid-sevenths">
                  <h5 class="col-modal">
                      Neutered
                      <span></span>
                      <br>
                      {{this.neutered}}</h5>
                  <h5 class="col-modal">
                      Feral
                      <span></span>
                      <br>{{this.feral}}</h5>
                  <h5 class="col-modal">
                      Declawed
                      <span></span>
                      <br>
                      {{this.declawed}}</h5>
                  <h5 class="col-modal">
                        Vaccinated
                        <span></span>
                        <br>
                        {{this.rabes_shot}}
                  </h5>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
          {{/each}}
    </div>
  </div>





