<div class="pet-headers flex-grid-fifths">
<h2 class="col-hbs">Pet Name</h2>
<h2 class ="col-hbs">Owner Name</h2>
<h2 class="col-hbs">Date of Birth</h2>
<h2 class="col-hbs">Gender</h2>
<h2 class="col-hbs">Breed</h2>
</div>
  {{#each pets}}
<div class = "pet-values flex-grid-fifths">
    <h3 class="col-hbs">{{this.name}}</h3>
    <h3 class ="col-hbs">{{this.owner_name}}</h3>
    <h3 class="col-hbs">{{this.born_on}}</h3>
    <h3 class="col-hbs">{{this.gender}}</h3>
    <h3 class="col-hbs">{{this.breed}}</h3>
</div>
  <div class="button-group flex-grid-fifths">
  <form class="update-vaccine-form patch-button col-hbs" data-id="{{id}}">
    <input name="submit" type="submit" class="update-vaccinne-btn" value="Got a shot!">
  </form>
    <form class="update-feral-form patch-button col-hbs" data-id="{{id}}">
    <input name="pet[feral]" type="submit" class="update-feral-btn" value="Not Feral!">
  </form>
    <form class="update-neutered-form patch-button col-hbs" data-id="{{id}}">
    <input name="pet[neutered]" type="submit" class="update-neutered-btn" value="Neutered!!">
  </form>
    <form class="update-declawed-form patch-button col-hbs" data-id="{{id}}">
    <input name="pet[declawed]" type="submit" class="update-declawed-btn" value="Declawed!!!">
  </form>
  <form class="delete-pet-form patch-button col-hbs" data-id="{{id}}">
    {{!-- <i type="submit" class="delete-pet-btn fa fa-trash-o fa-lg" aria-hidden="true"></i> --}}
    <input name="submit" type="submit" class="delete-pet-btn" value="Remove Pet">
  </form>
</div>


<li id="edit" data-toggle="modal" data-target="#editPetModal" class="edit-pet"><a href="#">Edit</a></li>
<div class="main-container">
  <div class="form-container">
    <div class="modal fade" id="editPetModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="editPetLabel">Sign-Up</h4>
          </div>
        <div class="modal-body">
            <form id="edit-pet" action="#" data-id="{{id}}">
                <div class="patch">
                    <legend>
                    <input type="text" class="form-control pet-edit"
                      placeholder="Name of Old Owner">
                    <input type="text" class="form-control pet-edit"
                      placeholder="Name of Old Owner" name="pet[owner_name]">
                    </legend>
                    <legend>
                      <input type="text" class="form-control pet-edit"
                      placeholder="Old Pet Name">
                      <input type="text" name="pet[name]" class="form-control pet-edit"
                      placeholder="New Pet Name">
                    </legend>
                      <div class="modal-footer">
                        <input type="button" class="btn btn-default" value="close" data-dismiss="modal">
                        <input id="update-pet" type="submit" value="submit">
                      </div>
                  </div>
              </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}




